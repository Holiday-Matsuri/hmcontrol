      <span class="fs-4">Holiday Matsuri</span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <%= link_to admin_path, class: is_active?(admin_path) do %>
          <i class="fa-duotone fa-house"></i>
          Home
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to admin_conventions_path, class: is_active?(admin_conventions_path) do %>
          <i class="fa-duotone fa-landmark"></i>
          Conventions
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to admin_events_path, class: is_active?(admin_events_path) do %>
