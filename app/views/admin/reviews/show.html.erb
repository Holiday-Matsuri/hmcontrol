<div class="row">
  <div class="col-md-12">
    <h1><%= @panel.event_name %></h1>
  </div>
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <h2>Panel Info</h2>
            <ul class="list-group">
              <li class="list-group-item">Host: <%= @panel.host_stage_name %></li>
              <li class="list-group-item">Hosted at previous Holiday Matsuri? <%= @panel.previous_convention %></li>
            </ul>
          </div>
          <div class="col-md-6">
            <h2>Review Averages</h2>
            <ul class="list-group">
              <li class="list-group-item">Feasibility: <%= @panel.reviews.average(:feasibility) %></li>
              <li class="list-group-item">Style: <%= @panel.reviews.average(:style) %></li>
              <li class="list-group-item">Structure: <%= @panel.reviews.average(:structure) %></li>
              <li class="list-group-item">Fun Factor: <%= @panel.reviews.average(:fun_factor) %></li>
              <li class="list-group-item">Total: <%= @panel.reviews.average(:total_score) %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Internal Description</h5>
        <p class="card-text">
          <%= @panel.internal_desc %>
        </p>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">External Description</h5>
        <p class="card-text">
          <%= @panel.external_desc %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <% if current_user.type == "AdminUser" %>
    <h1>Reviews</h1>
      <table class="table table-striped">
        <tr>
          <th>Reviewer</th>
          <th>Feasibility</th>
          <th>Style</th>
          <th>Structure</th>
          <th>Fun Factor</th>
          <th>Total Score</th>
          <th>Comments</th>
        </tr>
        <% @panel.reviews.each do |review| %>
          <tr>
            <td><%= review.user.full_name %></td>
            <td><%= review.feasibility %></td>
            <td><%= review.style %></td>
            <td><%= review.structure %></td>
            <td><%= review.fun_factor %></td>
            <td><%= review.total_score %></td>
            <td><%= review.comments %></td>
          </tr>
        <% end %>
      </table>
      
    <% else %>
      <%= @review.inspect %>
    <% end %>
  </div>
</div>

