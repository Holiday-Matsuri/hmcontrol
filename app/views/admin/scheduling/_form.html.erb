<%= form_with model: @event, url: admin_application_scheduling_index_path(params[:application_id]) do |f| %>
  <div class="row g-5">
    <div class="col-4">
      <%= f.label :event_name %>
      <%= f.text_field :event_name, value: @app.event_name, readonly: true, class: 'form-control' %>
    </div>
    <div class="col-4">
      <%= f.label :start_datetime %>
      <%= f.datetime_local_field :start_datetime, class: 'form-control' %>
    </div>
    <div class="col-4">
      <%= f.label :end_datetime %>
      <%= f.datetime_local_field :end_datetime, class: 'form-control' %>
    </div>
  </div>
  <div class="row g-5">
    <div class="col-4">
      <%= f.label :location %>
      <%= f.select :location, options_for_select(['Main Events', 'Special Events', 'Game Room', 'Cosplay Academy', 'Panel Chicago', 'Panel Miami', 'Panel New Orleans', 'Panel Los Angeles', 'Panel San Francisco', 'Big Panel', 'Cafe'], 'Select an Age Rating'), {}, {class: 'form-select'} %>
    </div>
    <div class="col-4">
      <%= f.label :host %>
      <%= f.text_field :host, value: @app.host_stage_name, readonly: true, class: 'form-control' %>
    </div>
    <div class="col-4">
      
    </div>
  </div>
  <div class="row g-10">
    <div class="col-12">
      <%= f.label :external_desc %>
      <%= f.text_area :external_desc, value: @app.external_desc, class: 'form-control' %>
    </div>
  </div>
  <%= f.hidden_field :convention_id, value: @convention.id %>
  <%= f.hidden_field :user_id, value: @app.user.id %>
  <%= f.hidden_field :convention_id, value: @app.convention.id %>
  <%= f.hidden_field :age_rating, value: @app.age_rating %>

  <%= f.submit class: 'btn btn-primary' %>


<% end %>